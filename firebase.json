{
  "hosting": {
    "public": "src",
    "cleanUrls": true,
    "trailingSlash": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/profile",
        "type": 301
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    }
  }
}
